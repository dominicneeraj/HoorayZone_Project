        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/subcategories_grid_horizontal_margin"
        android:paddingRight="@dimen/subcategories_grid_horizontal_margin"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"/>

