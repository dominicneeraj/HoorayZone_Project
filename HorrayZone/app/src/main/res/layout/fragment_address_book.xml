<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_book_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/margin_with_fab"
        android:layout_marginTop="?actionBarSize"/>

    <ViewStub
        android:id="@+id/stub_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_gravity="center"
        android:layout="@layout/empty_view"/>

    <android.support.design.widget.FloatingActionButton
        style="@style/Widget.HoorayZone.FloatingActionButton"
        android:id="@+id/new_address_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_black_24dp"/>

    <include layout="@layout/include_drop_shadow_view"/>

</FrameLayout>