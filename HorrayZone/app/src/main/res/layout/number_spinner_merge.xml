<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.horrayzone.horrayzone.ui.widget.TintableImageView
        android:id="@+id/spinner_decrement_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="center"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_remove_black_18dp"
        app:tint="@color/icon_system_selector"/>

    <FrameLayout
        android:id="@+id/spinner_value_box"
        android:layout_width="56dp"
        android:layout_height="32dp">

        <TextView
            android:id="@+id/spinner_value_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_primary_selector"
            android:textStyle="bold"/>

        <ProgressBar
            style="?android:progressBarStyleSmall"
            android:id="@+id/spinner_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

    <com.horrayzone.horrayzone.ui.widget.TintableImageView
        android:id="@+id/spinner_increment_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="center"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_add_black_18dp"
        app:tint="@color/icon_system_selector"/>

</merge>
