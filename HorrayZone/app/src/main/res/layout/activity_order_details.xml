            <android.support.v7.widget.CardView
                style="@style/Widget.HoorayZone.CardView"
                android:id="@+id/shipping_info_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium">

                <com.horrayzone.horrayzone.ui.widget.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/title_section_shipping"
                    android:textColor="?colorAccent"
                    app:typeface="Roboto-Medium.ttf"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/divider_light"/>

                <LinearLayout
                    android:id="@+id/shipping_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:id="@+id/address_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_medium_large"
                        android:textColor="@color/text_primary"
                        tools:text="John Doe"/>

                    <TextView
                        android:id="@+id/address_lines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_primary"
                        tools:text="2135 Cooper Street"/>

                    <TextView
                        android:id="@+id/address_city_state_zip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Ridgecrest, CA 93555"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/address_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        tools:text="United States"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/address_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_primary"
                        tools:text="Phone: 305-477-5698"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                style="@style/Widget.HoorayZone.CardView"
                android:id="@+id/order_details_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium">

                <com.horrayzone.horrayzone.ui.widget.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/title_section_order_details"
                    android:textColor="?colorAccent"
                    app:typeface="Roboto-Medium.ttf"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/divider_light"/>

                <LinearLayout
                    android:id="@+id/order_details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_light"
                    android:showDividers="middle"
                    android:dividerPadding="@dimen/spacing_large"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/Widget.HoorayZone.CardView"
                android:id="@+id/order_summary_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium">

                <com.horrayzone.horrayzone.ui.widget.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/title_section_order_summary"
                    android:textColor="?colorAccent"
                    app:typeface="Roboto-Medium.ttf"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/divider_light"/>

                <RelativeLayout
                    android:id="@+id/order_summary_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:id="@+id/summary_labels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/summary_values"
                        android:layout_toStartOf="@+id/summary_values"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_primary"
                        android:lineSpacingMultiplier="1.1"
                        android:text="@string/order_summary_labels"/>

                    <TextView
                        android:id="@+id/summary_values"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:gravity="end"
                        android:lineSpacingMultiplier="1.1"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary"
                        tools:text="$25.00\n$6.50\n$31.50\n$3.25"/>


                    <TextView
                        android:id="@+id/order_total_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/summary_labels"
                        android:layout_toLeftOf="@+id/summary_order_total"
                        android:layout_toStartOf="@+id/summary_order_total"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_medium_large"
                        android:textColor="@color/text_primary"
                        android:text="@string/label_order_total"/>

                    <TextView
                        android:id="@+id/summary_order_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/summary_values"
                        android:gravity="end"
                        android:textSize="@dimen/text_size_medium_large"
                        android:textStyle="bold"
                        android:textColor="?colorAccent"
                        tools:text="$34.75"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium_large"
                        android:textColor="@color/text_secondary"
                        tools:text="Phone: 305-477-5698"
                        android:visibility="gone"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        style="?indeterminateProgressStyle"
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ViewStub
        android:id="@+id/stub_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout="@layout/empty_view"/>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/appbar_elevation">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.HoorayZone.AppBar"
            app:popupTheme="@style/ThemeOverlay.HoorayZone.Popup"
            app:contentInsetStart="@dimen/keyline_content_start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <com.horrayzone.horrayzone.ui.widget.FontTextView
                    android:id="@+id/order_number_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:typeface="Roboto-Medium.ttf"
                    tools:text="@string/order_number"/>

                <TextView
                    android:id="@+id/order_date_status_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="@color/text_disable"
                    tools:text="@string/order_date"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/include_drop_shadow_view"
             android:layout_width="match_parent"
             android:layout_height="@dimen/appbar_elevation"
             android:layout_marginTop="?actionBarSize"/>

</FrameLayout>