<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_large"
        android:clipToPadding="false">

        <android.support.v7.widget.CardView
            style="@style/Widget.HoorayZone.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            app:cardCornerRadius="0dp">

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_large"
                android:paddingLeft="@dimen/spacing_medium_large"
                android:paddingRight="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_medium_large"
                android:paddingEnd="@dimen/spacing_large"
                app:columnCount="3">

                <com.horrayzone.horrayzone.ui.widget.TintableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:layout_marginEnd="@dimen/keyline_margin"
                    android:src="@drawable/ic_person"
                    app:tint="@color/icon_system_default"
                    app:layout_gravity="center_vertical"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/first_name_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/text_disable"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnWeight="1">

                    <android.support.design.widget.TextInputEditText
                        style="@style/Widget.HoorayZone.EditText.FloatingLabel"
                        android:id="@+id/first_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_first_name"
                        android:inputType="textCapWords"
                        android:nextFocusDown="@+id/last_name_edit_text"/>

                </android.support.design.widget.TextInputLayout>

               <android.support.design.widget.TextInputLayout
                    android:id="@+id/last_name_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/text_disable"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnWeight="1">

                    <EditText
                        style="@style/Widget.HoorayZone.EditText.FloatingLabel"
                        android:id="@+id/last_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_last_name"
                        android:inputType="textCapWords"/>

                </android.support.design.widget.TextInputLayout>
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_large"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="3"/>


                <com.horrayzone.horrayzone.ui.widget.TintableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:layout_marginEnd="@dimen/keyline_margin"
                    android:src="@drawable/ic_person"
                    app:tint="@color/icon_system_default"
                    app:layout_gravity="center_vertical"/>





                <android.support.design.widget.TextInputLayout
                    android:id="@+id/username_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/text_disable"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="2">

                    <EditText
                        style="@style/Widget.HoorayZone.EditText.FloatingLabel"
                        android:id="@+id/username_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username"
                        android:inputType="textCapWords"/>

                </android.support.design.widget.TextInputLayout>








                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_large"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="3"/>

                <com.horrayzone.horrayzone.ui.widget.TintableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:layout_marginEnd="@dimen/keyline_margin"
                    android:src="@drawable/ic_business"
                    app:tint="@color/icon_system_default"
                    app:layout_gravity="center_vertical"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/text_disable"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="2">

                    <EditText
                        style="@style/Widget.HoorayZone.EditText.FloatingLabel"
                        android:id="@+id/company_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_company"
                        android:inputType="textCapWords"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_large"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="3"/>

                <com.horrayzone.horrayzone.ui.widget.TintableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:layout_marginEnd="@dimen/keyline_margin"
                    android:src="@drawable/ic_at"
                    app:tint="@color/icon_system_default"
                    app:layout_gravity="center_vertical"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/text_disable"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="2">

                    <EditText
                        style="@style/Widget.HoorayZone.EditText.FloatingLabel"
                        android:id="@+id/email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_large"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="3"/>

                <com.horrayzone.horrayzone.ui.widget.TintableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/keyline_margin"
                    android:layout_marginEnd="@dimen/keyline_margin"
                    android:src="@drawable/ic_more_horiz"
                    app:tint="@color/icon_system_default"
                    app:layout_gravity="center_vertical"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/password_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/text_disable"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="2">

                    <EditText
                        style="@style/Widget.HoorayZone.EditText.FloatingLabel"
                        android:id="@+id/password_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_password"
                        android:fontFamily="sans-serif-regular"
                        android:inputType="textPassword"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_large"
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="3"/>

                <!--TODO: Change the disable state color for this CheckBox.-->
                <CheckBox
                    android:id="@+id/tos_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingStart="@dimen/spacing_large"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/text_primary_selector"
                    android:textSize="@dimen/text_size_medium"
                    android:text="I accept terms and conditions."
                    app:layout_gravity="fill_horizontal"
                    app:layout_columnSpan="3"/>

            </android.support.v7.widget.GridLayout>

        </android.support.v7.widget.CardView>

        <Button
            style="@style/Widget.HoorayZone.Button.Default"
            android:id="@+id/create_account_button"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:enabled="false"
            android:text="@string/button_text_create_account"/>

    </LinearLayout>

</ScrollView>

