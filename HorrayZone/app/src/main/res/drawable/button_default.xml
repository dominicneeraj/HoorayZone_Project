<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
       android:insetBottom="@dimen/button_inset_vertical_material"
       android:insetLeft="@dimen/button_inset_horizontal_material"
       android:insetRight="@dimen/button_inset_horizontal_material"
       android:insetTop="@dimen/button_inset_vertical_material">
    <selector>
        <item android:state_enabled="false">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/button_corner_material"/>
                <solid android:color="@color/button_default_disabled"/>
                <padding
                    android:bottom="@dimen/button_padding_vertical_material"
                    android:left="@dimen/button_padding_horizontal_material"
                    android:right="@dimen/button_padding_horizontal_material"
                    android:top="@dimen/button_padding_vertical_material"/>
            </shape>
        </item>
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/button_corner_material"/>
                <solid android:color="@color/button_default_pressed"/>
                <padding
                    android:bottom="@dimen/button_padding_vertical_material"
                    android:left="@dimen/button_padding_horizontal_material"
                    android:right="@dimen/button_padding_horizontal_material"
                    android:top="@dimen/button_padding_vertical_material"/>
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/button_corner_material"/>
                <solid android:color="@color/button_default_normal"/>
                <padding
                    android:bottom="@dimen/button_padding_vertical_material"
                    android:left="@dimen/button_padding_horizontal_material"
                    android:right="@dimen/button_padding_horizontal_material"
                    android:top="@dimen/button_padding_vertical_material"/>
            </shape>
        </item>
    </selector>

</inset>