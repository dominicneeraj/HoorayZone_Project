    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.HoorayZone.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="0dp">

        <com.horrayzone.horrayzone.ui.widget.FontTextView
            android:id="@+id/order_date_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/keyline_margin"
            android:gravity="center"
            android:textColor="@color/text_primary_inverse"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/step_circle"
            app:typeface="Roboto-Medium.ttf"
            tools:text="25\nFEB"
            tools:ignore="SmallSp"/>

        <!--<com.horrayzone.horrayzone.ui.widget.FontTextView
            android:id="@+id/order_status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
